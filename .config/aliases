alias sys="systemctl"    
alias sys="sudo systemctl"
alias sus="systemctl suspend"
alias running="systemctl --state=running --type=service"
alias flash="sudo mount -o umask=000 --mkdir /dev/sdc1 /mnt/flash"
alias unflash="sudo umount /mnt/flash"
alias fixKb="setxkbmap -layout us,ru -option 'ctrl:nocaps,grp:lctrl_toggle'"
alias cl="clear"
alias up="cd .."
alias nvimConfig="nvim ~/.config/nvim/init.lua"
alias n="nvim" 
alias bashrc="nvim ~/.bashrc"
alias aliases="nvim ~/.config/aliases"
alias aweConfig="nvim ~/.config/awesome/rc.lua"
alias ptl="nvim -S ~/.config/sessions/tl.vim"
alias pblog="nvim -S ~/.config/sessions/blog.vim"
alias myGroups="groups"
alias allGroups="cat /etc/group"
alias gitTags="git tag | xargs -n1 git rev-list -n 1"
alias genTags="ctags-universal $(cat ~/.config/ctags/ctags.conf)"    
alias trailingSpaces="sed -i 's/[ ]*$//'"    
alias sql="sqlite3" 
alias l='(ls --color=always -agohA | grep "^d"); (ls --color=always -agohA | grep -v "^[dt]")'
alias la='ls -A'
alias grep="grep --color"
alias zgrep="zgrep --color"
alias ghc="ghc-9.2"
alias backup=". ~/scr/backupVault.txt"

#Debian-specific
alias pkInstall="sudo apt install" 
alias pkFileInstall="sudo apt install" 
alias pkUninstall="sudo apt remove" 
alias pkRefresh="sudo apt update" 
alias pkUpgrade="sudo apt upgrade"
alias pkSearch="apt-cache search" 
alias pkSign="debsigs --sign=origin" 
alias pkVerify="debsigs --sign=origin" 
alias pkListFiles="dpkg -L" 
alias pkInfo="apt show" 
